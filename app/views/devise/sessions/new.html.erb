<%= render "shared/header" %>
<div class = "contact">
  <div class="container">
    <h2 class = "contact-title">ログイン</h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "input", placeholder:"Emailを入力してください", autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "input", placeholder:"パスワードを入力して下さい",autocomplete: "off" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me %><br />
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン",class: "button" %>
      </div>
    <% end %>
  </div>
</div>  
<%= render "shared/footer" %>
