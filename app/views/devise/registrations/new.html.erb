<%= render "shared/header" %>
<div class="contents">
  <div class="container">
    <h2 class="registration">新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.label :nickname %><br />
        <%= f.text_field :nickname,class: "input" ,placeholder:"ニックネームを入力" %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email,class: "input", placeholder:"Eメールを入力" %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "input",autocomplete: "off", placeholder:"パスワードを入力" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation,class: "input", autocomplete: "off", placeholder:"パスワードをもう一度入力" %>
      </div>
      <div class="actions">
        <%= f.submit "新規登録",class: "button" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>


